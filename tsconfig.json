{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,

  },
  "include": [
    "src",
    "shared"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
